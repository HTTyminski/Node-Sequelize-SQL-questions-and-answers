    <body>
        <div class="container">
            <br>
            <div class="card">
                <div class="card-header" style="display:flex; justify-content: space-between;">
                    <h3>Realizar pergunta</h3>
                </div>
                <div class="card-body">
                    <!-- method="POST" = perguntar?nome=valor&idade=valor dados não expostos e com segurança -->
                    <!-- method="GET" = perguntar?nome=valor&idade=valor dados expostos e sem segurança -->
                    <form method="POST" action="/salvarpergunta">
                        <label>Título</label>
                        <br>
                        <input name="titulo" type="text"  placeholder="Título" class="form-control">
                        <br>
                        <label>Descrição</label>
                        <br>
                        <textarea name="descricao" placeholder="Descreva sua pergunta aqui" id="" cols="30" rows="10" class="form-control"></textarea>
                        <br>
                        <button class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
